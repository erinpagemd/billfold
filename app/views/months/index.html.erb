<p id="notice"><%= notice %></p>

<div class='container-fluid' id='month-index'>
  <h1>Budgeted Months</h1>
    <% @months.each do |month| %>
      <div class='row container-fluid each-month'>
        <h2>
          <%= link_to "#{month.name.strftime("%B")} #{month.name.year}", month %>
        </h2>
        <%= link_to 'Edit', edit_month_path(month) %>
        <%= link_to 'Delete', month, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>


  <br>

  <%= link_to 'New Month', new_month_path %>

</div>
