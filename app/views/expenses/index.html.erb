<p id="notice"><%= notice %></p>

<div class='container-fluid' id='expense-index'>
  <div class='row'>
    <h1>All Expenses</h1>
  </div>

  <% @expenses.each do |expense| %>
    <div class='row each-expense'>
      <div class='each-header'>
        <div class='row'>
          <h3><%= expense.name %></h3>
        </div>
        <div class='row'>
          Due Date: <%= expense.due_date %>
        </div>
      </div>

      <div>
        Budgeted Amount: $<%= expense.amt_budget %>
      </div>
      <div>
        Actual Amount: $<%= expense.amt_actual %>
      </div>
      <div>
        Category: <%= expense.exp_category %>
      </div>
      <div>
        <%= link_to 'Edit', edit_expense_path(expense) %>
        <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>

  <br>

  <%= link_to 'New Expense', new_expense_path %>

</div>
